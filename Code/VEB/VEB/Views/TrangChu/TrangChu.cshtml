
@{
    ViewBag.Title = "TrangChu";
    Layout = "~/Views/Share/_LayoutTrangChu.cshtml";
}
<div>
    <h1 class="text-bg-light"></h1>
</div>

<div class="bodywrap">
    <h1 class="d-none">Zendo - </h1>
    <section class="section_slider">
        <div class="home-slider swiper-container swiper-container-initialized swiper-container-horizontal swiper-container-pointer-events">
            <div class="swiper-wrapper" style="transform: translate3d(0px, 0px, 0px);">
                <div class="swiper-slide swiper-slide-active" style="width: 1107px;">
                    <a href="#" class="clearfix" title="HUFI FASTFOOD">
                        <picture>
                            <img width="1903" height="580" src="~/IMG/Burger.jpg"alt="HUFI FASTFOOD" class="img-responsive">
                        </picture>
                    </a>
                </div>
            </div>
            <div class="swiper-button-prev swiper-button-disabled"></div>
            <div class="swiper-button-next swiper-button-disabled"></div>

        </div>
    </section>


    <script>
	var swiper = new Swiper('.home-slider', {
		autoplay: false,
		pagination: {
			el: '.home-slider .swiper-pagination',
			clickable: true,
		},
		navigation: {
			nextEl: '.home-slider .swiper-button-next',
			prevEl: '.home-slider .swiper-button-prev',
		},
	});
    </script>

</div>
