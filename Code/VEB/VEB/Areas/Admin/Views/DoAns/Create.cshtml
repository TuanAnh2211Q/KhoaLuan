@model VEB.Models.DoAn

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header">
            <h4>Thêm loại đồ ăn</h4>
        </div>

        <div class="card-body">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div>
                <h6 class="text-success">Nhập mã đồ ăn:</h6>
                <div>
                    @Html.EditorFor(model => model.maDoAn, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.maDoAn, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                <h6 class="text-success">Nhập tên đồ ăn:</h6>
                <div>
                    @Html.EditorFor(model => model.tenDoAn, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tenDoAn, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="text-success">
                <h6 class="text-success">Chọn loại đồ ăn:</h6>
                <div class="col-md-10">
                    @Html.DropDownList("maLoaiDoAn", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.maLoaiDoAn, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="card-footer">
            <div class=" text-end">
                <input type="submit" value="Thêm đồ ăn" class="btn btn-success" />
                <b></b>
                <a href="@Url.Action("Index","LoaiDoAns")">Quay lại</a>
            </div>
        </div>
    </div>
}




