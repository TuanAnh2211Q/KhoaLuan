@model VEB.Models.DoAn

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header">
            <h4>Chỉnh sửa thông tin đồ ăn đồ ăn</h4>
        </div>

        <div class="card-body">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div>
                <h6 class="text-success">Mã loại đồ ăn: @Model.maDoAn</h6>
            </div>
            <div class="form-group">
                <h6 class="text-success">Chọn mã loại:</h6>
                <div class="col-md-10">
                    @Html.DropDownList("maLoaiDoAn", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.maLoaiDoAn, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <h6 class="text-success">Nhập tên đồ ăn:</h6>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.tenDoAn, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tenDoAn, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <h6 class="text-success">Chọn ảnh:</h6>
                    <input type="file" name="fileupload" />
                @ViewBag.thongBao
            </div>

         </div>



            <div class="card-footer">
                <div class=" text-end">
                    <input type="submit" value="Sửa" class="btn btn-success" />
                    <b></b>
                    <a href="@Url.Action("Index","DoAns")">Quay lại</a>
                </div>
            </div>
        </div>
}




