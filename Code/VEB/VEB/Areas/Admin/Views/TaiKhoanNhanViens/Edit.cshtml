@model VEB.Models.TaiKhoanNhanVien

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa thông tin tài khoản nhân viên </h2>







@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card-body p-3">
        <h3>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.tenTaiKhoan)
            </div>
        </h3>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>

                    <th>Mật khẩu</th>
                    <th>Quyền:</th>


                </tr>
            </thead>
            <tbody>


                <tr>
                    <td>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.matKhau, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.matKhau, "", new { @class = "text-danger" })
                        </div>
                    </td>
                    <td>
                        <div class="col-md-10">
                            @Html.DropDownList("maQuyen", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.maQuyen, "", new { @class = "text-danger" })
                        </div>
                    </td>






                </tr>

            </tbody>
        </table>
    </div>




   
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

    </div>
}

