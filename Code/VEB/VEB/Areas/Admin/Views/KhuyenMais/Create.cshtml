@model VEB.Models.KhuyenMai

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Thêm khuyến mãi</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h5>Nhập mã khuyến mãi:</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.maKhuyenMai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.maKhuyenMai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>Nhập tên khuyến mãi:</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenKhuyenMai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenKhuyenMai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>Chọn loại khuyến mãi:</h5>
            <div class="col-md-10">
                @Html.DropDownList("maLoaiKhuyenMai", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.maLoaiKhuyenMai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>Nhập mức giảm:</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.mucGiam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.mucGiam, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                @Html.ActionLink("Back to List", "Index")

            </div>
        </div>
    </div>
}
