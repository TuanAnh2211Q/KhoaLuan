@model VEB.Models.KhuyenMai

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa thông tin khuyến mãi</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.maKhuyenMai)

        <div class="form-group">
            <h6>Nhập tên khuyên mãi:</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.tenKhuyenMai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tenKhuyenMai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h6>Chọn mã loại khuyến mãi:
             </h6>            
            <div class="col-md-10">
                @Html.DropDownList("maLoaiKhuyenMai", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.maLoaiKhuyenMai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h6>Nhập mức giảm</h6>
            <div class="col-md-10">
                @Html.EditorFor(model => model.mucGiam, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.mucGiam, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu" class="btn btn-default btn-success" />
                @Html.ActionLink("Quay về", "Index")
            </div>
        </div>
    </div>
}

