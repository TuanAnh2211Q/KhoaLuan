@model VEB.Models.LoaiDoAn

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header">
            <h4>Chỉnh sửa loại đồ ăn</h4>
        </div>

        <div class="card-body">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div>
                <h6 class="text-success">Mã loại đồ ăn: @Model.maLoaiDoAn</h6>
            </div>

            <div>
                <h6 class="text-success">Tên loại đồ ăn:</h6>
                <div>
                    @Html.EditorFor(model => model.tenLoaiDoAn, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tenLoaiDoAn, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="card-footer">
            <div class=" text-end">
                <input type="submit" value="Sửa loại đồ ăn" class="btn btn-success" />
                <b></b>
                <a href="@Url.Action("Index","LoaiDoAns")">Quay lại</a>
            </div>
        </div>
    </div>
}