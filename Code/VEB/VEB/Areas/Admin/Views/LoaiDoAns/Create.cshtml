@model VEB.Models.LoaiDoAn

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="card">
        <div class="card-header">
            <h4>Thêm loại đồ ăn</h4>
        </div>

        <div class="card-body">
            <hr/>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div>
                <h6 class="text-success">Nhập mã loại đồ ăn:</h6>
                <div>
                    @Html.EditorFor(model => model.maLoaiDoAn, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.maLoaiDoAn, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                <h6 class="text-success">Nhập tên loại đồ ăn:</h6>
                <div>
                    @Html.EditorFor(model => model.tenLoaiDoAn, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tenLoaiDoAn, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="card-footer">
            <div class=" text-end">
                <input type="submit" value="Thêm loại đồ ăn" class="btn btn-success" />
                <b></b>
                <a href="@Url.Action("Index","LoaiDoAns")">Quay lại</a>
            </div>
        </div>
    </div>
}


