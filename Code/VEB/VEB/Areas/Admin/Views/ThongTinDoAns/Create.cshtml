@model VEB.Models.ThongTinDoAn

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="card">
    <div class="card-header">
        <h4>Thêm thông tin món ăn đồ ăn</h4>
    </div>

    <div class="card-body">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div>
            <div class="form-group">

                <div class="col-md-10">
                    <h1>Mã đồ ăn: @ViewBag.maDoAn</h1>
                </div>
            </div>
            <h6 class="text-success"> Nhập đơn vị bán:</h6>
            <div>
                @Html.EditorFor(model => model.donViBan, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.donViBan, "", new { @class = "text-danger" })
            </div>
        </div>

        <div>
            <h6 class="text-success">Nhập đơn giá:</h6>
            <div>
                @Html.EditorFor(model => model.donGia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.donGia, "", new { @class = "text-danger" })
            </div>
        </div>
        <div>
            <h6 class="text-success">Nhập ghi chú:</h6>
            <div>
                @Html.EditorFor(model => model.ghiChu, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ghiChu, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm thông tin món " class="btn btn-default" />
            @Html.ActionLink("Back to List", "Index","DoAns")
        </div>
    </div>
</div>
}

<div>
</div>
