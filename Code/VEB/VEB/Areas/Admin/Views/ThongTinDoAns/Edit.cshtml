@model VEB.Models.ThongTinDoAn

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header">
            <h4>Chỉnh sửa loại đồ ăn</h4>
        </div>

        <div class="card-body">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div>
                <h6 class="text-success">Mã loại đồ ăn: @Model.maDoAn</h6>
            </div>

            <div>
                <h6 class="text-success">Đơn vị bán:</h6>
                <div>
                    @Html.EditorFor(model => model.donViBan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.donViBan, "", new { @class = "text-danger" })
                </div>
            </div>
            <div>
                <h6 class="text-success">Đơn giá:</h6>
                <div>
                    @Html.EditorFor(model => model.donGia, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.donGia, "", new { @class = "text-danger" })
                </div>
            </div>
            <div>
                <h6 class="text-success">Ghi chú:</h6>
                <div>
                    @Html.EditorFor(model => model.ghiChu, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ghiChu, "", new { @class = "text-danger" })
                </div>
            </div>


        </div>


        <div class="card-footer">
            <div class=" text-end">
                <input type="submit" value="Sửa" class="btn btn-success" />
                <b></b>
                <a href="@Url.Action("Index","ThongTinDoAns",new {@maDoAn=Model.maDoAn })">Quay lại</a>
            </div>
        </div>
    </div>
}
