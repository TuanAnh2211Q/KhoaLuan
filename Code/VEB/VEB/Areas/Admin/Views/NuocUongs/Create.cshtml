@model VEB.Models.NuocUong

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header">
            <h4>Thêm đồ ăn mới</h4>
        </div>

        <div class="card-body">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div>
                <h6 class="text-success">Chọn nước muốn đưa bán:</h6>
                <div class="col-md-10">
                    @Html.DropDownList("maNuoc", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.maNuoc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="text-success">
                <h6 class="text-success">Nhập đơn vị bán:</h6>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.donViBan, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.donViBan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="text-success">
                <h6 class="text-success">Nhập giá bán:</h6>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.giaBanNuoc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.giaBanNuoc, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="text-success">
                <h6 class="text-success">Chọn ảnh:</h6>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.HinhURL, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HinhURL, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>


        <div class="card-footer">
            <div class=" text-end">
                <input type="submit" value="Thêm nước" class="btn btn-success" />
                <b></b>
                <a href="@Url.Action("Index","NuocUongs")">Quay lại</a>
            </div>
        </div>
    </div>
}

