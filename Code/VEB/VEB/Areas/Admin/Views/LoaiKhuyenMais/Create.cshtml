@model VEB.Models.LoaiKhuyenMai

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header">
            <h4>Thêm loại khuyến mãi</h4>
        </div>

        <div class="card-body">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div>
                <h6 class="text-success">Nhập mã loại khuyến mãi:</h6>
                <div>
                    @Html.EditorFor(model => model.maLoaiKhuyenMai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.maLoaiKhuyenMai, "", new { @class = "text-danger" })
                </div>
            </div>

            <div>
                <h6 class="text-success">Nhập tên loại khuyến mãi:</h6>
                <div>
                    @Html.EditorFor(model => model.tenLoaiKhuyenMai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tenLoaiKhuyenMai, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="card-footer">
            <div class=" text-end">
                <input type="submit" value="Thêm loại khuyến mãi" class="btn btn-success" />
                <b></b>
                <a href="@Url.Action("Index","LoaiKhuyenMais")">Quay lại</a>
            </div>
        </div>
    </div>
}



