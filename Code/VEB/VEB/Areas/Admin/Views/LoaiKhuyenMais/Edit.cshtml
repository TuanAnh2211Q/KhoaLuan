@model VEB.Models.LoaiKhuyenMai

@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="card">
        <div class="card-header">
            <h4>Chỉnh sửa loại khuyến mãi</h4>
        </div>

        <div class="card-body">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div>
                <h6 class="text-success">Mã loại đồ ăn: @Model.maLoaiKhuyenMai</h6>
            </div>

            <div>
                <h6 class="text-success">Tên loại khuyến mãi:</h6>
                <div>
                    @Html.EditorFor(model => model.tenLoaiKhuyenMai, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.tenLoaiKhuyenMai, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


        <div class="card-footer">
            <div class=" text-end">
                <input type="submit" value="Sửa loại khuyến mãi" class="btn btn-success" />
                <b></b>
                <a href="@Url.Action("Index","LoaiKhuyenMais")">Quay lại</a>
            </div>
        </div>
    </div>
}